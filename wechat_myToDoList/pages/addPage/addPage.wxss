/* pages/addPage/addPage.wxss */
.container{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  background-color: #f0fff0;
}

.title_input{
   width: 100%;
   text-align: left;
   font-family: "黑体";
   font-size: 42rpx;
   background-color: #ffffff;
   margin: 3px;
}

.content_input{
  width: 100%;
  text-align: left;
  font-family: "幼圆";
  font-size: 37rpx;
  background-color: #ffffff;
  margin: 3px;
}

.content-text{
  width: 100%;
}

.container-bottom{
  width: 100%; 
  position: fixed;
  /* left: 0; */
  bottom: 0;
  background-color: #f5f5dc;
  margin: 3px;
  opacity: 1;
}

.bottom-section{
  display: flex;
  flex-direction: row;
  /* justify-content: space-around; */
  background-color: #f5f5dc;
  margin: 3px;
}

.finish-button{
  position: fixed;
  bottom: 7px;
  right: 7px;
}

button[class = ".button"]::after{
  border: 0;
}

icon::after{
  border: 0;
}